# Uncomment the next line to define a global platform for your project
 platform :ios, '11.0'

target 'SocialMedia' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for SocialMedia
  
  # Pod for animating Label
  pod 'CLTypingLabel'
  
  # For Firebase Storage of Assets like images
  pod 'Firebase/Storage'
  
  # For Firebase Authentication of users
  pod 'Firebase/Auth'
  
  # For Firebase Database. We are using Firestore
  pod 'Firebase/Firestore'
  
  # Showing Dropdown menu
  pod 'DropDown'
  
  # For SmartKeyboard to lift the text field automatically if keyboard is opened
  pod 'IQKeyboardManagerSwift'
  
  # For showing User Image with Name Initials
  pod 'InitialsImageView'
  
  # For deleting TableView Cell
  pod 'SwipeCellKit'
  
  pod 'SDWebImage'
  
end
